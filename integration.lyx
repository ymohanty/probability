\begin_layout Proposition
\begin_inset CommandInset label
LatexCommand label
name "prop:densities"

\end_inset

Let 
\begin_inset Formula $\left(\X,\F,\mu\right)$
\end_inset

 be a measure space.
 For any function 
\begin_inset Formula $f\in\nonnegMeasurableFunctions$
\end_inset

, the set valued function 
\begin_inset Formula $\nu:\F\longrightarrow\left[0,\infty\right]$
\end_inset

 given by
\begin_inset Formula 
\[
\nu\left(A\right):=\lebInt{\mu}{f\indicate_{A}}
\]

\end_inset

is a measure on 
\begin_inset Formula $\F$
\end_inset

.
 Moreover, for any 
\begin_inset Formula $A\in\F$
\end_inset

, if 
\begin_inset Formula $\mu\left(A\right)=0$
\end_inset

 then 
\begin_inset Formula $\nu\left(A\right)=0$
\end_inset

.
\end_layout

\begin_layout Proof
Note that 
\begin_inset Formula $\nu\left(\emptyset\right)=$
\end_inset


\begin_inset Formula $\lebInt{\mu}{f\indicate_{\emptyset}}=\lebInt{\mu}{\indicate_{\emptyset}}=\mu\left(\emptyset\right)=0.$
\end_inset

 Next, let 
\begin_inset Formula $\left\{ A_{i}\right\} _{i\in\N}\in\F$
\end_inset

 be disjoint and define
\begin_inset Formula 
\[
B_{n}=\bigcup_{i=1}^{n}A_{i}
\]

\end_inset

which is an increasing sequence of sets such that 
\begin_inset Formula $\bigcup_{n\in\N}B_{n}=\bigcup_{i\in\N}A_{i}$
\end_inset

.
 Then
\begin_inset Formula 
\begin{align*}
\nu\left(\bigcup_{i\in\N}A_{i}\right) & =\lebInt{\mu}{f\indicate_{\bigcup_{i\in\N}A_{i}}}\\
 & =\lebInt{\mu}{f\indicate_{\lim_{n\to\infty}B_{n}}}\\
 & =\lebInt{\mu}{f\lim_{n\to\infty}\indicate_{B_{n}}}\\
 & =\lebInt{\mu}{f\lim_{n\to\infty}\sum_{i=1}^{n}\indicate_{A_{i}}}\\
 & =\lim_{n\to\infty}\lebInt{\mu}{\sum_{i=1}^{n}f\indicate_{A_{i}}}\\
 & =\lim_{n\to\infty}\sum_{i=1}^{n}\lebInt{\mu}{f\indicate_{A_{i}}}\\
 & =\sum_{i=1}^{\infty}\lebInt{\mu}{f\indicate_{A_{i}}}\\
 & =\sum_{i=1}^{\infty}\nu\left(A_{i}\right)
\end{align*}

\end_inset

where the second equality follows from the discussion on convergence of
 sets in Section 2.1, the third equality due to Proposition 
\begin_inset CommandInset ref
LatexCommand ref
reference "prop:limSupInfIndicator"
plural "false"
caps "false"
noprefix "false"

\end_inset

, the fourth equality from induction on Fact 
\begin_inset CommandInset ref
LatexCommand ref
reference "fact:indicatorFunctionsFiniteOperations"
plural "false"
caps "false"
noprefix "false"

\end_inset

, the fifth equality from the monotone convergence theorem, and the sixth
 equality due to the linearity of 
\begin_inset Formula $\bar{\mu}$
\end_inset

.
 Finally, let 
\begin_inset Formula $A\in\F$
\end_inset

 be a 
\begin_inset Formula $\mu-$
\end_inset

measure zero set and define 
\begin_inset Formula $\left\{ s_{n}\right\} _{n\in\N}\in\mathcal{M}_{\textnormal{sim}}\left(\X,\F\right)$
\end_inset

 to be an 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
hyperref[prop:simpleFunctionMonotoneConvergence]{increasing sequence of
 simple functions}
\end_layout

\end_inset

 which converges to 
\begin_inset Formula $f$
\end_inset

 with standard representation 
\begin_inset Formula 
\[
s_{n}=\sum_{i=1}^{I_{n}}a_{i.n}\indicate_{A_{i,n}}.
\]

\end_inset

Then the 
\begin_inset Formula $s_{n}\indicate_{A}\nearrow f\indicate_{A}$
\end_inset

and 
\begin_inset Formula 
\begin{align*}
\lebInt{\mu}{s_{n}\indicate_{A}} & =\lebInt{\mu}{\sum_{i=1}^{I_{n}}a_{i,n}\indicate_{A_{i,n}\cap A}}\\
 & =\sum_{i=1}^{I_{n}}a_{i,n}\mu\left(A_{i,n}\cap A\right)\\
 & =0
\end{align*}

\end_inset

where the last equality follows from the monotonicty of measures.
 Applying the monotone convergence theorem, we have that 
\begin_inset Formula 
\begin{align*}
\nu\left(A\right) & =\lebInt{\mu}{f\indicate_{A}}\\
 & =\lim_{n\to\infty}\lebInt{\mu}{s_{n}\indicate_{A}}\\
 & =0
\end{align*}

\end_inset

which completes the proof.
\end_layout

