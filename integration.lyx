\begin_inset Formula 
\begin{align*}
f_{n}\left(x\right)-ts\left(x\right) & =\underbrace{\left(f\left(x\right)-ts\left(x\right)\right)}_{2\epsilon_{x}}-\underbrace{\left(f\left(x\right)-f_{n}\left(x\right)\right)}_{\epsilon_{x}}=\epsilon_{x}>0
\end{align*}

\end_inset

